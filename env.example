# Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=mongodb://localhost:27017/backoffice-veiculos
MONGODB_URI=mongodb://localhost:27017/backoffice-veiculos
MONGODB_TEST_URI=mongodb://localhost:27017/backoffice-veiculos-test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=24h

# API Configuration
API_VERSION=v1
API_PREFIX=/api

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=info

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Jobs Configuration
DAILY_METRICS_CRON=0 2 * * *
HEALTH_CHECK_CRON=*/5 * * * *

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_ALERT_THRESHOLD=3

# Legacy Systems Integration
LEGACY_SALES_API_URL=http://localhost:8080/api/sales
LEGACY_INVENTORY_API_URL=http://localhost:8081/api/inventory
LEGACY_API_TIMEOUT=10000

# Cache Configuration
CACHE_FALLBACK_TTL=86400

# Alerting Configuration
ALERTING_ENABLED=true

# Slack Webhook Configuration
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#alerts
SLACK_USERNAME=Backoffice API Bot

# Discord Webhook Configuration
DISCORD_WEBHOOK_URL=
DISCORD_USERNAME=Backoffice API Bot

# Alert Thresholds
ALERT_RESPONSE_TIME_WARNING=500
ALERT_RESPONSE_TIME_CRITICAL=1000
ALERT_ERROR_RATE_WARNING=2.0
ALERT_ERROR_RATE_CRITICAL=5.0
ALERT_MEMORY_WARNING=80.0
ALERT_MEMORY_CRITICAL=90.0
ALERT_DB_MAX_FAILURES=3
ALERT_DB_TIME_WINDOW=60000

# Alert Debouncing
ALERT_DEBOUNCING_ENABLED=true
ALERT_GRACE_PERIOD=300000
ALERT_MAX_PER_PERIOD=3

# Alert Notification
ALERT_RETRY_ATTEMPTS=3
ALERT_RETRY_DELAY=5000
ALERT_TIMEOUT=10000
